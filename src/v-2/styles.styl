
.v-2
  margin 0
  /* background-color #e7e2d6 */
  background-color #252424
  overflow-x hidden


  body, button, label 
    font-size 16px
    /* font-family Arial, Helvetica, sans-serif */
    font-family 'Cormorant Upright', serif

  canvas 
    position absolute
    top 0
    left 0
    z-index 0
    transition 250ms


  .controlsContainer 
    position fixed
    z-index 10
    top 10px
    left 10px

    display flex
    flex-direction column

    width 120px


  .collapse 
    display none


  #controls 
    border 1px solid #4d4d4d
    color #4d4d4d
    text-align center
    padding 8px 16px
    cursor pointer
    user-select none


  #controls:hover 
    border 1px solid #cdc3bd
    color #cdc3bd


  .settings 
    width 100%


  button 
    cursor pointer
    user-select none

    /* background-color #cdc3bd */
    background-color transparent
    color #cdc3bd
    
    border 1px solid #cdc3bd
    border-top none
    padding 8px 16px
    /* border-radius 4px */

    width 100%



  #controls:hover, #start:hover, #stop:hover, #reset:hover, #step:hover 
    /* background-color #f4a54a */
    /* background-color #708e57 */
    background-color #cdc3bd
    color #252424


  #start 
    border-top 1px solid #cdc3bd


  /* #stop:hover 
    background-color #db473f
  */

  /* #reset:hover 
    color #e7e2d6
    background-color #675e74
    background-color #f4a54a
  */

  /* .step:hover 
    border 1px solid #db473f
    background-color #db473f
  */

  .dev 
    display none


  label 
    align-self center


  .rate 
    background-color #cdc3bd
    border none
    border-radius 4px
    height 30px
    text-align center

  .rate:focus-visible 
    border none


  .awareness 
    -webkit-appearance none
    appearance none
    background-color #cdc3bd
    border-radius 4px
    width 100%


  .awareness::-webkit-slider-thumb 
    -webkit-appearance none /* Override default look */
    appearance none
    width 16px
    height 30px
    background #e7e2d6 /* Green background */
    border 4px solid #cdc3bd
    border-radius 4px
    cursor pointer /* Cursor on hover */

  /* 
  button, input 
    margin-bottom 16px
  */


  .text 
    /* https://stackoverflow.com/questions/5132323/aligning-a-div-to-center-of-page-while-its-position-is-absolute/42362105#42362105 */
    position absolute
    left 50%
    transform translateX(-50%)
    top 25%
    color #ababab
    width 400px
    font-size 28px
    line-height 2
    /* https://stackoverflow.com/questions/37821328/remove-line-height-from-first-line */
    /* offsets the first line's line-height */
    margin -14px 0 
    transition 250ms



  .poemControlContainer 
    position absolute
    left 50%
    transform translateX(-50%)
    bottom 10%
    color #ababab
    font-size 18px
    user-select none


  .poemControlContainer span 
    cursor pointer


  #left 
    /* transform rotate(180deg) */
    margin-right 20px
    display none


  .hide 
    opacity 0
    pointer-events none


  .fadeOut 
    opacity 0

